<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.gobletsoft.fitnessforenergy.menFitOlmak">

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:background="@android:color/holo_blue_bright"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="0dp">

        <TextView
            android:id="@+id/tvBaslangic"
            android:layout_width="fill_parent"
            android:layout_height="30dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentStart="true"
            android:layout_marginTop="10dp"
            android:background="@android:color/holo_green_light"
            android:text="Başlangıç:"
            android:textAlignment="center"
            android:textAllCaps="false"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/textView7"
            android:layout_width="fill_parent"
            android:layout_height="35dp"
            android:layout_below="@+id/tvBaslangic"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="50dp"
            android:layout_marginTop="10dp"
            android:background="@android:color/holo_blue_dark"
            android:text="5 Dakika Isınma Hareketleri: hafif koşu, ellerin ve bacakların ısınması"
            android:textAlignment="viewStart" />

        <TextView
            android:id="@+id/textView8"
            android:layout_width="fill_parent"
            android:layout_height="30dp"
            android:layout_below="@+id/textView7"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:background="@android:color/holo_green_light"
            android:text="İdman:"
            android:textAlignment="center"
            android:textSize="18sp" />

        <Button
            android:id="@+id/btnSinav"
            android:layout_width="fill_parent"
            android:layout_height="35dp"
            android:layout_below="@+id/textView8"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="50dp"
            android:layout_marginTop="10dp"
            android:background="@android:color/holo_blue_dark"
            android:text="3 * 15 Şınav" />

        <Button
            android:id="@+id/btnBarfiks"
            android:layout_width="fill_parent"
            android:layout_height="35dp"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/btnSinav"
            android:layout_marginLeft="25dp"
            android:layout_marginRight="25dp"
            android:layout_marginTop="10dp"
            android:background="@android:color/holo_blue_dark"
            android:text="3 * 8 Barfiks" />

        <Button
            android:id="@+id/btnPushUp"
            android:layout_width="fill_parent"
            android:layout_height="35dp"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/btnBarfiks"
            android:layout_marginLeft="25dp"
            android:layout_marginRight="25dp"
            android:layout_marginTop="10dp"
            android:background="@android:color/holo_blue_dark"
            android:text="3 * 10 pike push up" />

        <Button
            android:id="@+id/btnChinUp"
            android:layout_width="fill_parent"
            android:layout_height="35dp"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/btnPushUp"
            android:layout_marginLeft="25dp"
            android:layout_marginRight="25dp"
            android:layout_marginTop="10dp"
            android:background="@android:color/holo_blue_dark"
            android:text="3 * 8 chin up" />

        <Button
            android:id="@+id/btnDiamondPush"
            android:layout_width="fill_parent"
            android:layout_height="35dp"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/btnChinUp"
            android:layout_marginLeft="25dp"
            android:layout_marginRight="25dp"
            android:layout_marginTop="10dp"
            android:background="@android:color/holo_blue_dark"
            android:text="3 * 10 diamond push up" />

        <Button
            android:id="@+id/btnSquat"
            android:layout_width="fill_parent"
            android:layout_height="35dp"
            android:layout_below="@+id/btnDiamondPush"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="25dp"
            android:layout_marginRight="25dp"
            android:layout_marginTop="10dp"
            android:background="@android:color/holo_blue_dark"
            android:text="3 * 15 squat" />

        <Button
            android:id="@+id/btnLegRaise"
            android:layout_width="fill_parent"
            android:layout_height="35dp"
            android:layout_below="@+id/btnSquat"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="25dp"
            android:layout_marginRight="25dp"
            android:layout_marginTop="10dp"
            android:background="@android:color/holo_blue_dark"
            android:text="3 * 10 leg raise" />

        <Button
            android:id="@+id/btnBilgi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/btnLegRaise"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="11dp"
            android:background="@android:drawable/ic_dialog_info"
            android:text="Bilgi" />
    </RelativeLayout>
</android.support.constraint.ConstraintLayout>
